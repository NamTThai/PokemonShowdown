<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/team_preview_fragment"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/team_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team name (OU)"
        android:textColor="#000000"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageView
            android:id="@+id/team_pokemon_icon_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/smallicons_0" />

        <ImageView
            android:id="@+id/team_pokemon_icon_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/smallicons_0" />

        <ImageView
            android:id="@+id/team_pokemon_icon_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/smallicons_0" />

        <ImageView
            android:id="@+id/team_pokemon_icon_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/smallicons_0" />

        <ImageView
            android:id="@+id/team_pokemon_icon_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/smallicons_0" />

        <ImageView
            android:id="@+id/team_pokemon_icon_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/smallicons_0" />
    </LinearLayout>
</LinearLayout>