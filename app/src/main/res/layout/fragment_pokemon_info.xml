<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/switchPkm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:contentDescription="@string/battle_switch"
            android:src="@drawable/ic_action_repeat" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/pokemon_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="4"
            android:gravity="fill_vertical"
            android:lines="1" />

        <ImageView
            android:id="@+id/type_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/type_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Lv 100" />

        <ImageView
            android:id="@+id/gender"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_accent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pokemon_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="centerInside" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ability_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Ability: "
                    android:textStyle="bold|italic" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/ability"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:lines="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/item_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="Item: "
                    android:textStyle="bold|italic" />

                <ImageView
                    android:id="@+id/item_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/item_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:lines="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/stats_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Stats:"
                android:textSize="15sp"
                android:textStyle="bold|italic" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:lines="1"
                android:text="Atk 999 / Def 999 / SpA 999 / SpD 999 / Spe 999" />

            <!--<TextView-->
            <!--android:id="@+id/modifier_stats"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:text="Stats (After Modifiers):"-->
            <!--android:textSize="15sp"-->
            <!--android:textStyle="bold|italic" />-->

            <!--<me.grantland.widget.AutofitTextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="2dp"-->
            <!--android:gravity="center"-->
            <!--android:lines="1"-->
            <!--android:text="Atk 999 / Def 999 / SpA 999 / SpD 999 / Spe 999" />-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:text="10%" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginEnd="7dp"
            android:padding="2dp"
            android:text="BRN"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/bar_hp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:indeterminate="false"
            android:max="100" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/active_move1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="20">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move1_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="13"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />

            <ImageView
                android:id="@+id/active_move1_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:contentDescription="@string/move_type"
                android:scaleType="centerInside" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move1_pp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="4"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/active_move2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="20">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move2_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="13"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />

            <ImageView
                android:id="@+id/active_move2_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:contentDescription="@string/move_type"
                android:scaleType="centerInside" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move2_pp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="4"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/active_move3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="20">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move3_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="13"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />

            <ImageView
                android:id="@+id/active_move3_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:contentDescription="@string/move_type"
                android:scaleType="centerInside" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move3_pp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="4"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/active_move4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:weightSum="20">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move4_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="13"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />

            <ImageView
                android:id="@+id/active_move4_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:contentDescription="@string/move_type"
                android:scaleType="centerInside" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/active_move4_pp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="4"
                android:gravity="center"
                android:lines="1"
                autofit:minTextSize="2sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>